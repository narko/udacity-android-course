<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.mygarden">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <provider
            android:name=".provider.PlantContentProvider"
            android:authorities="com.example.android.mygarden"
            android:exported="true" />

        <!-- (1): Create a plant_widget_info.xml file and set updatePeriodMillis to 30 minutes -->
        <!-- (2): Create a plant_widget.xml file that contains an ImageView defaulting to @drawable/grass -->
        <!--
             (3): Create a PlantWidgetProvider class that extends AppWidgetProvider and
                        set updateAppWidget to handle clicks and launch MainActivity
        -->
        <!--
             (4): Add a reciever tag for PlantWidgetProvider and an intent-filter for APPWIDGET_UPDATE
                        with meta data pointing to the plant_widget_info file
        -->

        <activity
            android:name=".ui.MainActivity"
            android:label="@string/title_activity_my_garden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.PlantDetailActivity"
            android:label="@string/title_activity_plant_detail" />
        <activity
            android:name=".ui.AddPlantActivity"
            android:label="@string/title_activity_add_plant" />

        <receiver android:name=".ui.PlantWidgetProvider">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/plant_widget_info" />
        </receiver>
    </application>

</manifest>